{
	"name": "task-manager",
	"version": "1.0.0",
	"main": "app.js",
	"license": "MIT",
	"scripts": {
		"build": "tsc --project ./",
		"dev": "nodemon src/app.ts",
		"format": "prettier --write \"src/**/*.{ts,json}\"",
		"lint": "eslint src/**/*.ts",
		"start": "node dist/app.js",
		"test": "NODE_ENV=test mocha --require ts-node/register --require dotenv/config src/**/*.test.ts",
		"test:watch": "nodemon --ext ts --exec 'yarn test'"
	},
	"dependencies": {
		"cors": "^2.8.5",
		"dotenv": "^16.4.5",
		"express": "^4.19.2",
		"mongoose": "^8.3.2"
	},
	"devDependencies": {
		"@types/chai": "^4.3.14",
		"@types/cors": "^2.8.17",
		"@types/express": "^4.17.21",
		"@types/mocha": "^10.0.6",
		"@types/mongoose": "^5.11.97",
		"@types/node": "^20.12.7",
		"@typescript-eslint/eslint-plugin": "^7.7.1",
		"@typescript-eslint/parser": "^7.7.1",
		"chai": "^5.1.0",
		"eslint": "^9.1.1",
		"mocha": "^10.4.0",
		"nodemon": "^3.1.0",
		"prettier": "^3.2.5",
		"ts-node": "^10.9.2",
		"typescript": "^5.4.5"
	},
	"nodemonConfig": {
		"events": {
			"\\033c clears the terminal": "(comment)",
			"start": "printf \"\\033c\""
		}
	}
}
