{
	"name": "task-manager",
	"version": "1.0.0",
	"main": "app.js",
	"license": "MIT",
	"scripts": {
		"build": "tsc --project ./",
		"dev": "nodemon src/app.ts",
		"format": "prettier --write \"src/**/*.{ts,json}\"",
		"lint": "eslint src/**/*.ts",
		"start": "node dist/app.js",
		"test": "NODE_ENV=test mocha --require ts-node/register --require dotenv/config src/**/*.test.ts",
		"test:watch": "nodemon --ext ts --exec 'yarn test'"
	},
	"dependencies": {
		"cors": "^2.8.5",
		"dotenv": "^16.0.3",
		"express": "^4.18.2",
		"mongoose": "^7.1.0"
	},
	"devDependencies": {
		"@types/chai": "^4.3.5",
		"@types/cors": "^2.8.13",
		"@types/express": "^4.17.17",
		"@types/mocha": "^10.0.1",
		"@types/mongoose": "^5.11.97",
		"@types/node": "^18.15.13",
		"@typescript-eslint/eslint-plugin": "^5.60.1",
		"@typescript-eslint/parser": "^5.60.1",
		"chai": "^4.3.7",
		"eslint": "^8.43.0",
		"mocha": "^10.2.0",
		"nodemon": "^2.0.22",
		"prettier": "^2.8.8",
		"ts-node": "^10.9.1",
		"typescript": "^5.0.4"
	},
	"nodemonConfig": {
		"events": {
			"\\033c clears the terminal": "(comment)",
			"start": "printf \"\\033c\""
		}
	}
}
