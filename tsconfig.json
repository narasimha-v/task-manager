{
	"compilerOptions": {
		"baseUrl": ".",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"outDir": "./dist",
		"paths": {
			"*": ["node_modules/*"]
		},
		"rootDir": "./src",
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "es6",
		"typeRoots": ["./src/types", "node_modules/@types"],
		"types": ["mocha"]
	},
	"exclude": ["node_modules"],
	"include": ["src/**/*"]
}
